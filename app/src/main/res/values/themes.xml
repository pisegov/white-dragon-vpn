<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WhiteDragonVPN" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="preferenceTheme">@style/ThemeOverlay.App.Preference</item>
    </style>

    <style name="Theme.WhiteDragonVPN" parent="Base.Theme.WhiteDragonVPN" />


    <!--  Switches -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/switch_button_connected</item>
    </style>

    <!--  Navigation Bar-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnSurfaceVariant">@color/primary</item>
        <item name="colorOnSecondaryContainer">@color/switch_button_connected</item>
    </style>

    <style name="ThemeOverlay.App.Preference" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/PreferenceMaterialSwitch</item>
    </style>

    <style name="PreferenceMaterialSwitch" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="widgetLayout">@layout/preference_switch</item>
    </style>
</resources>